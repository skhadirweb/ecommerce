{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Ecommerce{% endblock %}

{% block content %}

    {% if product.type == 'card' %}
        <div class="row">
            <div id="card-show" class="col-md-6">
                <div class="card-content">
                    <div class="card-image">
                        <img id="output" />
                    </div>
                    <div class="bkg" ><p id="firstname"></p></div>
                    <div class="bkg" ><p id="lastname"></p></div>
                    <div class="bkg" ><p id="slogan"></p></div>
                </div>
            </div>
            <div class="col-md-6">
                {{ form_start(form) }}

                {{ form_end(form) }}
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-5">
                <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
            </div>
            <div class="col-md-7 my-auto">
                <h3>{{ product.name }}</h3>
                <p>{{ product.subtitle }}</p>
                <span class="product-page-price">{{ (product.price / 100) | number_format(2,',','.') }} â‚¬</span>
                <hr>
                <p>
                    {{ product.description }}
                </p>

            </div>
        </div>
        <a href="{{ path('add_to_cart', { 'id' : product.id }) }}" class="btn btn-primary">Ajouter au panier</a>

    {% endif %}

{% endblock %}
